import bpy

# Add a mesh cube to the scene
bpy.ops.mesh.primitive_cube_add()

# Get a reference to the newly created object
box1 = bpy.context.active_object

# Set the location of the box
box1.location = (0, 0, 0)

# Set the dimensions of the box
box1.dimensions = (1, 1, 1)

# Add a mesh cube to the scene
bpy.ops.mesh.primitive_cube_add()

# Get a reference to the newly created object
lid1 = bpy.context.active_object

# Set the location of the lid
lid1.location = (0, 0, 0.5)

# Set the dimensions of the lid
lid1.dimensions = (1.2, 1.2, 0.1)

# Set the name of the objects
box1.name = "Box1"
lid1.name = "Lid1"

